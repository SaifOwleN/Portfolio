---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Icon } from "astro-icon/components";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="text-white bg-purple-900">
    <div class="m-4 rounded-xl bg-black h-full">
      <Header />
      <main class="w-full">
        <div
          class="flex sm:flex-row flex-col items-center justify-evenly h-full w-full"
        >
          <div>
            <span class="text-sm font-merriweather">Hi, my name is</span>
            <h1
              class="font-poppins text-7xl bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500"
            >
              Saif Al-Din Samy
            </h1>
            <p class="text-lg font-ibm mt-4">
              I am a full-stack developer with passion to all things software,
              and I love Coding
            </p>
            <div class="flex justify-between">
              <a
                href="projects"
                class="flex items-center gap-2 border border-white p-4 px-10 w-fit"
                >See My Projects <Icon name={"maki:arrow"} /></a
              >
              <a
                href="projects"
                class="flex items-center gap-2 border border-white p-4 px-10 w-fit"
                >Contact Me!</a
              >
            </div>
          </div>
          <div class="">
            <img src="/me.jpg" class="rounded-full w-72" />
          </div>
        </div>
      </main>
    </div>
    <!-- <Footer /> -->
  </body>
</html>
