---
import Layout from "../../layouts/Layout.astro";
import ProjectCard from "../../components/ProjectCard.astro";
---

<Layout title="Saif's Projects" description="">
  <main class="font-space" transition:animate="slide">
    <h1 class="mb-4 sm:text-3xl text-[#DADADB] text-2xl font-bold">
      My Projects
    </h1>
    <div class="flex flex-col justify-center gap-4 flex-wrap">
      <ProjectCard
        image="/Portfolio/projects/WTG/WTG.png"
        title="What To Game"
        label="Frontend"
        link="https://what-to-game.vercel.app/"
        date="1/2024"
      />
