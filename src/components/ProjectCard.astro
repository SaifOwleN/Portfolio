---
import { Icon } from "astro-icon/components";

interface Props {
  image: string;
  width: string;
  height: string;
  date: string;
  label: string;
  title: string;
  link: string;
}
const { image, link, date, label, width, height, title } = Astro.props;
---

<a href={link} class={`flex flex-col`}>
  <img src={image} class={width + " " + height} />
  <div class="px-4 mt-4">
    <h1 class="text-2xl font-bold font-inter text-wrap">{title}</h1>
    <div class="flex gap-2 items-center text-sm">
      <label
        class="border border-emerald-600 text-emerald-600 p-0.5 px-5 rounded-full"
        >{date}</label
      >
      <Icon name={"mdi:dot"} />
      <label class="text-gray-400">{label}</label>
    </div>
    <p class="text-xs text-gray-200 font-thin"><slot /></p>
  </div>
</a>
